<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_holder"
    android:layout_marginTop="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:baselineAligned="false">
        <LinearLayout android:orientation="vertical" android:layout_gravity="center" android:layout_width="0.0dip" android:layout_height="wrap_content" android:layout_marginRight="4.0dip" android:layout_weight="1.0">
            <TextView
                android:textAllCaps="true"
                android:text=" "
                android:textColor="@color/warnaTitle"
                android:id="@+id/item_nama"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:textIsSelectable="true"
                android:textAllCaps="true"
                android:textColor="@color/warna_judul"
                android:layout_marginTop="2dp"
                android:text=" "
                android:id="@+id/item_resi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View android:background="#ffdbdbdb" android:layout_marginRight="10dp" android:layout_width="1.0dip" android:layout_height="fill_parent"/>
        <ImageView android:id="@+id/item_delete" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/ic_delete" android:scaleType="fitCenter" android:adjustViewBounds="true" />
    </LinearLayout>
    <View android:background="#ffdbdbdb" android:layout_marginTop="10dp" android:layout_width="fill_parent" android:layout_height="1.0dip"/>
</LinearLayout>